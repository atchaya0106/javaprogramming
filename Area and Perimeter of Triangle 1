import java.util.*;
import java.math.*;

public class Solution {

    public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
       int base=sc.nextInt();
        int height=sc.nextInt();
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        float area=(float)((base*height)/2);
        float perimeter=(float)(a+b+c);
        System.out.printf("Area of Triangle is %.2f",area);
        System.out.printf("\nPerimeter of Triangle is %.2f",perimeter);
        

    }
}
